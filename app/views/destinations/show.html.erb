<div class="container">
  <p id="notice"><%= notice %></p>

  <h3>
    <%= @destination.name %>
  </h3>

  <p>
    <strong>Zip:</strong>
    <%= @destination.zip %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @destination.description %>
  </p>

  <%= image_tag(@destination.image_url) %>

  <div class="weather">
    <h4>Forecast for <%= @destination.name %>:</h4>
    <% if !@destination.weather.nil? %>
      <p class="date">Date: <%= @destination.weather.date %></p>
      <p class="current">Date: <%= @destination.weather.current %></p>
      <p class="high">Date: <%= @destination.weather.high %></p>
      <p class="low">Date: <%= @destination.weather.low %></p>
      <p class="summary">Date: <%= @destination.weather.summary %></p>
    <% end %>
  </div>

  <div class="row">
    <%= link_to 'Edit', edit_destination_path(@destination) %> |
    <%= link_to 'Back', destinations_path %>
  </div>
</div>
